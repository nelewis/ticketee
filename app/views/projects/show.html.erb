<% @title = "TextMate 2 - Projects - Ticketee" %>
binding.pry
<h2><%= @project.name %></h2>
<% admins_only do %>
  <%= link_to "Edit Project", edit_project_path(@project) %>
  <%= link_to "Delete Ticket",project_ticket_path(@project), :method => :delete, :confirm => "Are you sure you want to delete this ticket?" %>
<% end %>
<% authorized?("create tickets".to_sym, @project) do %>
  <%= link_to "New Ticket", new_project_ticket_path(@project) %>
<% end %>
<%= link_to "Home", projects_path %>
<ul id='tickets'>
  <% @project.tickets.each do |ticket| %>
    <li>
      #<%= ticket.id %>
      -
      <%= link_to ticket.title, [@project, ticket] %>
    </li>
  <% end %>
</ul>
